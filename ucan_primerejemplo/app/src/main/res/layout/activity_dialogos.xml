<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_dialogos">

    <Button
        android:id="@+id/bttoast"
        android:layout_width="111dp"
        android:layout_height="84dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="68dp"
        android:text="Toast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btdialogo1"
        android:layout_width="130dp"
        android:layout_height="78dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="71dp"
        android:text="Dialogo Simple"
        app:layout_constraintStart_toEndOf="@+id/bttoast"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btdiaglo_seleccion"
        android:layout_width="123dp"
        android:layout_height="108dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="36dp"
        android:text="Dialogo Seleccion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bttoast" />

    <Button
        android:id="@+id/btdialogoRadio"
        android:layout_width="125dp"
        android:layout_height="93dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="46dp"
        android:text="Dialogo Radio"
        app:layout_constraintStart_toEndOf="@+id/btdiaglo_seleccion"
        app:layout_constraintTop_toBottomOf="@+id/btdialogo1" />

    <Button
        android:id="@+id/btdialogo_personalizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="42dp"
        android:text="Dialogo Personalizado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btdiaglo_seleccion" />

    <TextView
        android:id="@+id/textnombre_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="18dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btdialogo_personalizado" />
</androidx.constraintlayout.widget.ConstraintLayout>